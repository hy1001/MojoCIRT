
#middle {
    top: 0;

    bottom: 0px;
    margin: 0 auto;
    position: absolute;
    width: 100%
}

#middle-offset {
    position: relative;
    height: 100%;
}

#left, #right {
    overflow-y: scroll;
}

#left {
    width: 61%;
    height: 100%
}

#right {
    background: #eed5c3;
    position: absolute;
    right: 0;
    top: 0;
    width: 38%;
    bottom: 0;
}

